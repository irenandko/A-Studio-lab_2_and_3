<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgr"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/for_page_four"
        android:layout_width="289dp"
        android:layout_height="60dp"
        android:layout_marginTop="472dp"
        android:backgroundTint="@color/phrase_color"
        android:fontFamily="@font/aclonica"
        android:lineSpacingExtra="8sp"
        android:onClick="page_4"
        android:text="LAB 4"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:typeface="serif"
        app:cornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/black"
        app:strokeWidth="3dp" />

    <Button
        android:id="@+id/for_page_three"
        android:layout_width="289dp"
        android:layout_height="60dp"
        android:layout_marginTop="368dp"
        android:backgroundTint="@color/phrase_color"
        android:fontFamily="@font/aclonica"
        android:lineSpacingExtra="8sp"
        android:onClick="page_3"
        android:text="LAB 3"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:typeface="serif"
        app:cornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/black"
        app:strokeWidth="3dp" />

    <Button
        android:id="@+id/for_page_two"
        android:layout_width="289dp"
        android:layout_height="60dp"
        android:layout_marginTop="268dp"
        android:backgroundTint="@color/phrase_color"
        android:fontFamily="@font/aclonica"
        android:lineSpacingExtra="8sp"
        android:onClick="page_2"
        android:text="@string/lab_2"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:typeface="serif"
        app:cornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/black"
        app:strokeWidth="3dp" />

    <Button
        android:id="@+id/fon"
        android:layout_width="353dp"
        android:layout_height="52dp"
        android:layout_marginTop="148dp"
        android:backgroundTint="#22591010"
        android:text="_"
        android:textColor="#AA867F"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#000000"
        app:strokeColor="#000000"
        app:strokeWidth="3dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="333dp"
        android:layout_height="73dp"
        android:layout_marginTop="136dp"
        android:fontFamily="@font/bungee_shade"
        android:text="Choose the task:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/black"
        android:textSize="29sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>