<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/four_bg"
    tools:context=".Forth_page_first">


    <Button
        android:id="@+id/contact"
        android:layout_width="357dp"
        android:layout_height="65dp"
        android:layout_marginTop="188dp"
        android:backgroundTint="@color/bg_chat"
        android:fontFamily="@font/actor"
        android:onClick="goContact"
        android:text="CONTACTS"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_date" />

    <RelativeLayout
        android:id="@+id/upper_bg"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/four_page"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/adamina"
            android:text="Hello, user! :)"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_marginTop="60dp"
            android:layout_marginStart="35dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/adamina"
            android:text="Your personal assistant\nis HERE"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="120dp"
            android:layout_marginStart="35dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lower_bg"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="-45dp"
        app:layout_constraintTop_toBottomOf="@+id/upper_bg"
        android:background="@color/four_bg"
        app:circularflow_radiusInDP="100dp">

        <Button
            android:id="@+id/pers_acc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/actor"
            android:text="PERSONAL ACCOUNT"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold">

        </Button>

    </RelativeLayout>

    <EditText
        android:id="@+id/editText_username"
        android:layout_width="326dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:fontFamily="@font/actor"
        android:hint="Username"
        android:inputType="text"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lower_bg" />

    <EditText
        android:id="@+id/editText_date"
        android:layout_width="322dp"
        android:layout_height="63dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:fontFamily="@font/actor"
        android:hint="Date"
        android:inputType="date"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_username" />

    <Button
        android:id="@+id/save_info"
        android:layout_width="281dp"
        android:layout_height="63dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/actor"
        android:onClick="saveData"
        android:text=" SAVE INFO"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_date" />

    <Button
        android:id="@+id/contacts"
        android:layout_width="281dp"
        android:layout_height="63dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/actor"
        android:onClick="getData"
        android:text="UPLOAD INFO"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_date" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="188dp"
        android:layout_height="42dp"
        android:layout_marginBottom="24dp"
        android:text="TextView"
        android:background="@drawable/message_from"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>