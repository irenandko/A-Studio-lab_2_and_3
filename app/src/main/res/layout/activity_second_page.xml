<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sunset"
    tools:context=".SecondPage">

    <Button
        android:id="@+id/forback_2"
        android:layout_width="198dp"
        android:layout_height="56dp"
        android:layout_marginTop="640dp"
        android:backgroundTint="#6FA887CA"
        android:fontFamily="@font/aleo_light"
        android:lineSpacingExtra="8sp"
        android:onClick="back_to_main"
        android:text="@string/back"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="31dp"
        android:textStyle="bold"
        android:typeface="serif"
        app:cornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.136"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/phrase_color"
        app:strokeWidth="3dp" />

    <HorizontalScrollView
        android:layout_width="353dp"
        android:layout_height="467dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="55dp"
        android:fillViewport="true"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/forback_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/music_1"
                android:layout_width="328dp"
                android:layout_height="444dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="10dp"
                android:background="#2EB3A9A8"
                android:contentDescription="@string/app_name"
                android:cropToPadding="true"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/oper"
                android:visibility="visible" />

            <ImageButton
                android:id="@+id/music_2"
                android:layout_width="328dp"
                android:layout_height="444dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="10dp"
                android:background="#2EB3A9A8"
                android:contentDescription="@string/app_name"
                android:cropToPadding="true"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/whisper" />

            <ImageButton
                android:id="@+id/music_3"
                android:layout_width="328dp"
                android:layout_height="444dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="10dp"
                android:background="#2EB3A9A8"
                android:contentDescription="@string/app_name"
                android:cropToPadding="true"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/toxic" />

            <ImageButton
                android:id="@+id/music_4"
                android:layout_width="328dp"
                android:layout_height="444dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="10dp"
                android:background="#2EB3A9A8"
                android:contentDescription="@string/app_name"
                android:cropToPadding="true"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/wait" />

            <ImageButton
                android:id="@+id/music_5"
                android:layout_width="328dp"
                android:layout_height="444dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="10dp"
                android:background="#2EB3A9A8"
                android:contentDescription="@string/app_name"
                android:cropToPadding="true"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/stand" />


        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="347dp"
        android:layout_height="71dp"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/be_vietnam_bold"
        android:text="Tap for Music!"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#000000"
        android:textSize="45dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>